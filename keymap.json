[
  {
    "context": "vim_mode == normal || not_editing",
    "bindings": {
      "space n": "workspace::ToggleLeftDock",
      "space t": "terminal_panel::ToggleFocus",
      "space p": "file_finder::Toggle",
      "space l": "pane::ActivateNextItem",
      "space h": "pane::ActivatePrevItem",
      "space x": "pane::CloseActiveItem",
      "space c a": "editor::ToggleCodeActions",
      "space g b": "editor::ToggleGitBlame",
      "space r": "editor::Rename",
      "space i h": "editor::ToggleInlayHints"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "escape": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "n": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "d": "project_panel::Delete"
    }
  },
  {
    "context": "Dock || Terminal",
    "bindings": {
      "ctrl-w h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-w l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-w j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  }
]
